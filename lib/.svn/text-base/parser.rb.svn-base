class LibXML::XML::Parser
  class << self
    # memory leak in libxml: http://xaop.com/blog/2008/04/01/libxml-ruby-memory-leaks/
    def parse(string, path, attribute)
      parser = new
      rd, wr = IO.pipe
      begin
        pid = fork do
          rd.close
          begin
            parser.string = string
            result = parser.parse.find(path).inject([]) do |arr, el|
              arr << el.attributes[attribute]
              arr
            end
            wr.write Marshal.dump(result)
            wr.close
          rescue
          ensure
            exit!
          end
        end
        wr.close
        result = Marshal.load(rd.read)
        rd.close
        Process.wait(pid)
      end
      result
    end
  end
end